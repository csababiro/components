<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoadingViewsActivity">

    <com.mobiversal.loadingviews.ButtonLoadingView
            android:id="@+id/btnLoadingView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="32dp"
            android:elevation="8dp"
            app:textBLV="@string/button_loading_view"
            app:textColorBLV="@android:color/black"
            app:fontFamilyBLV="@font/avenir_next_ltpro_boldcn"
            android:background="@drawable/selector_btn_loading"
        />

    <com.mobiversal.loadingviews.ScreenLoadingView
            android:id="@+id/screenLoadingView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_margin="20dp"/>

    <com.mobiversal.loadingviews.ImageLoadingView
            android:id="@+id/imgLoadingView"
            android:layout_width="300dp"
            android:layout_height="300dp"/>

</LinearLayout>