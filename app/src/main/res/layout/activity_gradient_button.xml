<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.mobiversal.componentsdemo.GradientButtonActivity">

    <com.mobiversal.gradientbutton.GradientButton
            android:id="@+id/gbtn_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gradient example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:buttonGradientStartColor="@android:color/holo_blue_light"
            app:buttonGradientCenterColor="@android:color/holo_blue_bright"
            app:buttonGradientEndColor="#003366"/>

    <com.mobiversal.gradientbutton.GradientButton
            android:id="@+id/gbtn_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gradient example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gbtn_one"
            app:buttonGradientStartColor="@android:color/holo_red_dark"
            app:buttonGradientCenterColor="@android:color/holo_blue_dark"
            app:buttonGradientEndColor="@android:color/holo_red_light"
            android:gravity="start"/>

    <com.mobiversal.gradientbutton.GradientButton
            android:id="@+id/gbtn_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gradient example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gbtn_two"
            app:buttonGradientStartColor="@android:color/holo_green_dark"
            app:buttonGradientEndColor="@android:color/holo_green_light"
            android:gravity="end"/>

    <com.mobiversal.gradientbutton.GradientButton
            android:id="@+id/gbtn_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gradient example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gbtn_three"
            app:buttonGradientStartColor="@android:color/holo_green_light"
            app:buttonGradientCenterColor="@android:color/holo_blue_light"
            app:buttonGradientEndColor="@android:color/holo_orange_light"/>

    <com.mobiversal.gradientbutton.GradientButton
            android:id="@+id/gbtn_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gradient example"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gbtn_four"
            app:buttonGradientStartColor="@android:color/holo_purple"
            app:buttonGradientCenterColor="@android:color/holo_blue_light"
            app:buttonGradientEndColor="@android:color/holo_green_dark"/>

</androidx.constraintlayout.widget.ConstraintLayout>