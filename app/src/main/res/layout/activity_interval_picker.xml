<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".IntervalPickerActivity"
            android:orientation="vertical">

        <com.mobiversal.intervalpicker.IntervalPicker
                android:id="@+id/intervalPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>

        <com.mobiversal.intervalpicker.tabor.CustomTimePickerTabor
                android:id="@+id/customTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"/>

        <com.mobiversal.intervalpicker.magic.CustomTimePicker
                android:id="@+id/customTimePickerMagic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"/>

    </LinearLayout>
</ScrollView>